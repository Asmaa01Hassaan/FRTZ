<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Adjustment Wizard Form View -->
    <record id="view_payment_adjustment_wizard_form" model="ir.ui.view">
        <field name="name">payment.adjustment.wizard.form</field>
        <field name="model">installment.payment.adjustment.wizard</field>
        <field name="arch" type="xml">
            <form string="Payment Adjustment">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="installment_payment_id" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="original_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="original_due_date"/>
                        </group>
                        <group>
                            <field name="adjustment_type"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group>
                            <field name="new_amount" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"
                                   invisible="adjustment_type == 'date'"/>
                        </group>
                        <group>
                            <field name="new_due_date" 
                                   invisible="adjustment_type == 'amount'"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="adjustment_reason" placeholder="Please explain the reason for this adjustment..."/>
                    </group>
                    
                    <footer>
                        <button name="action_apply_adjustment" 
                                string="Apply Adjustment" 
                                type="object" 
                                class="btn-primary"/>
                        <button name="action_cancel" 
                                string="Cancel" 
                                type="object" 
                                class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
