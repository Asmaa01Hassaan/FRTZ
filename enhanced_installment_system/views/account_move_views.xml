<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Enhanced Invoice Form View -->
    <record id="view_move_form_installment_enhanced" model="ir.ui.view">
        <field name="name">account.move.form.installment.enhanced</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='due_date']" position="after">
                <div name="installment_info" invisible="not has_installments">
                    <group>
                        <group>
                            <field name="installment_schedule_id" readonly="1"/>
                            <button name="action_view_installment_schedule" 
                                    string="View Schedule" 
                                    type="object" 
                                    class="btn-primary"
                                    invisible="not installment_schedule_id"/>
                        </group>
                        <group>
                            <button name="action_generate_installment_schedule" 
                                    string="Generate Installment Schedule" 
                                    type="object" 
                                    class="btn-secondary"
                                    invisible="installment_schedule_id or state != 'draft'"/>
                            <button name="action_view_installment_payments" 
                                    string="View Payments" 
                                    type="object" 
                                    class="btn-info"
                                    invisible="not installment_schedule_id"/>
                        </group>
                    </group>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Invoice List View -->
    <record id="view_move_list_installment_enhanced" model="ir.ui.view">
        <field name="name">account.move.list.installment.enhanced</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="has_installments" widget="boolean_toggle"/>
                <field name="installment_schedule_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
