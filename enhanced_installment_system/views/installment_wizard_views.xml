<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Installment Generation Wizard Form -->
    <record id="view_installment_generation_wizard_form" model="ir.ui.view">
        <field name="name">installment.generation.wizard.form</field>
        <field name="model">installment.generation.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Installment Schedule">
                <header>
                    <button name="action_generate_installments" 
                            string="Generate Installments" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="invoice_id" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="partner_id" readonly="1"/>
                            <field name="total_amount" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="installment_count"/>
                            <field name="payment_frequency"/>
                            <field name="start_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="First Payment Configuration">
                            <group>
                                <group>
                                    <field name="first_payment_type"/>
                                    <field name="first_payment_percentage" 
                                           invisible="first_payment_type != 'percentage'"/>
                                    <field name="first_payment_amount" 
                                           invisible="first_payment_type != 'fixed'"/>
                                    <field name="custom_first_payment" 
                                           invisible="first_payment_type != 'custom'"/>
                                </group>
                                <group>
                                    <field name="late_fee_percentage"/>
                                    <field name="interest_rate"/>
                                    <field name="early_payment_discount"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Payment Schedule Preview">
                            <field name="payment_schedule_ids" readonly="1">
                                <list>
                                    <field name="sequence"/>
                                    <field name="due_date"/>
                                    <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="payment_type"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Installment Generation Wizard Action -->
    <record id="action_installment_generation_wizard" model="ir.actions.act_window">
        <field name="name">Generate Installment Schedule</field>
        <field name="res_model">installment.generation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
