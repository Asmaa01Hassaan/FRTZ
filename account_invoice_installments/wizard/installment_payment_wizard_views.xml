<odoo>
  <record id="view_installment_payment_wizard_form" model="ir.ui.view">
    <field name="name">installment.payment.wizard.form</field>
    <field name="model">installment.payment.wizard</field>
    <field name="arch" type="xml">
      <form string="Create Payment">
        <group>
          <field name="installment_id" invisible="1"/>
          <field name="amount" readonly="1"/>
          <field name="journal_id" options="{'no_create_edit': True}"/>
          <field name="memo"/>
        </group>
        <footer>
          <button string="Create Payment" type="object" name="action_create_payment" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
