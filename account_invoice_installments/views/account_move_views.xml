<odoo>
    <record id="view_move_form_installments_inherit" model="ir.ui.view">
        <field name="name">account.move.form.installments.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Checkbox -->
            <xpath expr="//sheet/notebook" position="before">
                <group>
                    <field name="apply_installment"/>
                </group>
            </xpath>

            <!-- تبويب جديد -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Payment Installment" invisible="apply_installment == False">
                    <group>
                        <group>
                            <field name="number_of_installments"/>
                            <field name="next_due_date"/>
                        </group>
                        <group>
                            <field name="installment_amount"/>
                            <field name="installment_payable" readonly="1"/>
                        </group>
                    </group>
                    <button name="action_generate_installments"
                            type="object"
                            string="Generate Installments"
                            class="oe_highlight"
                            invisible="state != 'posted' or apply_installment == False"/>


                    <!--          <button name="action_generate_installments" type="object" string="Generate Installments" class="oe_highlight" />-->
                    <!--context="{'default_move_id': active_id}"-->
                    <field name="installment_ids">
                        <list editable="bottom">
                            <field name="name" readonly="1"/>
                            <field name="payment_date"/>
                            <field name="amount" sum="Total"/>
                            <field name="state" readonly="1"/>
                            <field name="payment_id" readonly="1"/>

                            <button name="action_open_payment_wizard"
                                    string="Create Payment"
                                    type="object"
                                    class="btn-primary"
                                    invisible="state == 'paid'"/>

                            <button name="action_open_payment_wizard"
                                    string="View Payment"
                                    type="object"
                                    class="btn-secondary"
                                    invisible="state != 'paid' or not payment_id"/>
                        </list>
                    </field>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
