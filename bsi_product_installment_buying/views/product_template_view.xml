<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="product_template_view_form" model="ir.ui.view">
      <field name="name">product.template.form.view.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view" />
      <field name="priority">10</field>
      <field name="arch" type="xml">
         <!--
               Here, in product.template inherited form view, we have added a boolean field that will allow user
         to specify the installments for a product if the  installment box is checked
            -->
         <data>
            <div name="options" position="inside">
               <div>
                  <field name="installment_ok"
                     groups="bsi_product_installment_buying.bsi_allowed_installment" />
                  <label for="installment_ok"
                     groups="bsi_product_installment_buying.bsi_allowed_installment" />
               </div>
            </div>
            <xpath expr="//form//field[@name='barcode']" position="after">
               <field name="installment_ids"
                  groups="bsi_product_installment_buying.bsi_allowed_installment"
                  widget="many2many_tags" invisible="not installment_ok" />
            </xpath>
         </data>
      </field>
   </record>
</odoo>