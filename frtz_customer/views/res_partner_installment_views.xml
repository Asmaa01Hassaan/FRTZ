<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_installment_info" model="ir.ui.view">
        <field name="name">res.partner.form.installment.info</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Installment Information" invisible="not has_installments">
                    <field name="has_installments" invisible="1"/>

                    <group>
                        <group string="Installment Statistics">
                            <field name="installment_count"/>
                            <field name="paid_installment_count"/>
                            <field name="pending_installment_count"/>
                            <field name="overdue_installment_count"/>
                        </group>
                        <group string="Payment Totals">
                            <field name="total_installment_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="total_paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="total_remaining_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>

                    <group>
                        <button name="action_view_installments"
                                string="View All Installments"
                                type="object"
                                class="oe_highlight"
                                invisible="not has_installments"/>
                    </group>
<!--                    <field name="view_installments"/>-->
<!--                    <group string="Recent Installments" invisible="view_installments == 'False'">-->
<!--                        <field name="installment_list_ids" nolabel="1" context="{'list_view_ref': 'invoice_installment_extension.view_installment_list_list'}"/>-->
<!--                    </group>-->
                </page>
            </xpath>
        </field>
    </record>
</odoo>