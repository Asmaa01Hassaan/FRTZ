<odoo>
    <!-- Tree View -->
    <record id="view_customer_guarantees_tree" model="ir.ui.view">
        <field name="name">customer.guarantees.tree</field>
        <field name="model">customer.guarantees</field>
        <field name="arch" type="xml">
            <list string="Customer Guarantees" editable="bottom">
                <field name="customer_id"/>
                <field name="sale_order_customer_guarantees_status"/>
                <field name="date"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_customer_guarantees_form" model="ir.ui.view">
        <field name="name">customer.guarantees.form</field>
        <field name="model">customer.guarantees</field>
        <field name="arch" type="xml">
            <form string="Customer Guarantee">
                <sheet>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="sale_order_customer_guarantees_status"/>
                        </group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="date"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_customer_guarantees" model="ir.actions.act_window">
        <field name="name">Customer Guarantees</field>
        <field name="res_model">customer.guarantees</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new customer guarantee
            </p>
        </field>
    </record>

    <!-- Menu Item (optional - if you want it in main menu) -->
    <!-- 
    <menuitem id="menu_customer_guarantees"
              name="Customer Guarantees"
              parent="sale.sale_menu_root"
              action="action_customer_guarantees"
              sequence="10"/>
    -->
</odoo>

