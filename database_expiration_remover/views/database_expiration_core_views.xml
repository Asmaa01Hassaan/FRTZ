<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Database Expiration Core Form View -->
        <record id="view_database_expiration_core_form" model="ir.ui.view">
            <field name="name">database.expiration.core.form</field>
            <field name="model">database.expiration.core</field>
            <field name="arch" type="xml">
                <form string="Database Expiration Core">
                    <header>
                        <button name="action_prevent_expiration_now" string="Prevent Expiration Now" type="object" class="btn-primary"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Database Expiration Core"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="prevention_method"/>
                                <field name="prevention_interval_hours"/>
                                <field name="prevention_count" readonly="1"/>
                            </group>
                            <group>
                                <field name="last_prevention_date" readonly="1"/>
                                <field name="expiration_date_override"/>
                                <field name="trial_status_override"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Prevention Settings">
                                <group>
                                    <field name="prevention_method" string="Prevention Method"/>
                                    <field name="prevention_interval_hours" string="Prevention Interval (Hours)"/>
                                    <field name="expiration_date_override" string="Expiration Date Override"/>
                                    <field name="trial_status_override" string="Trial Status Override"/>
                                </group>
                            </page>
                            <page string="Prevention History">
                                <group>
                                    <field name="prevention_count" string="Total Preventions"/>
                                    <field name="last_prevention_date" string="Last Prevention"/>
                                    <field name="is_active" string="Prevention Active"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Database Expiration Core List View -->
        <record id="view_database_expiration_core_list" model="ir.ui.view">
            <field name="name">database.expiration.core.list</field>
            <field name="model">database.expiration.core</field>
            <field name="arch" type="xml">
                <list string="Database Expiration Core">
                    <field name="name"/>
                    <field name="is_active"/>
                    <field name="prevention_method"/>
                    <field name="prevention_interval_hours"/>
                    <field name="prevention_count"/>
                    <field name="last_prevention_date"/>
                    <field name="expiration_date_override"/>
                    <field name="trial_status_override"/>
                </list>
            </field>
        </record>

        <!-- Database Expiration Core Search View -->
        <record id="view_database_expiration_core_search" model="ir.ui.view">
            <field name="name">database.expiration.core.search</field>
            <field name="model">database.expiration.core</field>
            <field name="arch" type="xml">
                <search string="Database Expiration Core">
                    <field name="name"/>
                    <field name="is_active"/>
                    <field name="prevention_method"/>
                    <field name="trial_status_override"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Parameter Override" name="parameter_override" domain="[('prevention_method', '=', 'parameter_override')]"/>
                    <filter string="Database Direct" name="database_direct" domain="[('prevention_method', '=', 'database_direct')]"/>
                    <filter string="System Hook" name="system_hook" domain="[('prevention_method', '=', 'system_hook')]"/>
                    <filter string="Cron Override" name="cron_override" domain="[('prevention_method', '=', 'cron_override')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Prevention Method" name="prevention_method" context="{'group_by': 'prevention_method'}"/>
                        <filter string="Trial Status" name="trial_status" context="{'group_by': 'trial_status_override'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Database Expiration Core Action -->
        <record id="action_database_expiration_core" model="ir.actions.act_window">
            <field name="name">Database Expiration Core</field>
            <field name="res_model">database.expiration.core</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_database_expiration_core_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Database Expiration Core
                </p>
                <p>
                    This is the core system that prevents your database from expiring.
                    It uses multiple methods to ensure your database remains active.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_database_expiration_core"
                  name="Database Expiration Core"
                  parent="base.menu_administration"
                  action="action_database_expiration_core"
                  sequence="101"/>
    </data>
</odoo>
