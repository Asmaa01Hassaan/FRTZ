<odoo>
    <record id="res_config_settings_view_form_inherit_hide_confirm" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.hide.confirm</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Sale Confirm Settings" string="Sale Confirm Settings">
                    <h2>Sale Hide Button</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="hide_buttons"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="hide_buttons"/>
                                <div class="text-muted">
                                    Enable this to hide the Confirm button in invoice Sale Orders.
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="hide_sale_send_preview_buttons"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="hide_sale_send_preview_buttons"/>
                                <div class="text-muted">
                                    Enable this to hide Send by Email, Preview buttons and Quotation Sent state in Sale Orders.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
