<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Account Payment Form View - Add Invoice Payment Section -->
    <record id="view_account_payment_form_invoice_payment" model="ir.ui.view">
        <field name="name">account.payment.form.invoice.payment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <!-- Add notebook page for Transions -->
            <xpath expr="//notebook[@name='payment_notebook']" position="inside">
                <!-- Transions Page -->
                <page string="Transaction" name="transions"
                      invisible="not partner_id or partner_type != 'customer'">
                    <!-- Date filter and payment summary -->
                    <group>
                        <group>
                            <field name="payment_due_date_filter" string="Due Date" 
                                   options="{'datepicker': {'min_date': False}}"
                                   help="This date will be applied to all invoices as due_date_filter"
                                   invisible="1"/>
                        </group>
                        <group>
                            <field name="amount" string="Payment Amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="total_control_to_pay" 
                                   string="Total Control To Pay"
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" 
                                   readonly="1"/>
                            <field name="control_payment_remaining_amount" 
                                   string="Control Remaining Amount"
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" 
                                   readonly="1"
                                   style="color: red; font-weight: bold;"
                                   invisible="control_payment_remaining_amount == 0"/>
                        </group>
                    </group>
                    
                    <field name="control_payment_ids" nolabel="1">
                        <list string="Transaction" editable="bottom" create="1" delete="1">
                            <field name="invoice_id" required="1" options="{'no_create': True, 'no_create_edit': True}"   string="Transaction" />
<!--                            <field name="invoice_name" readonly="1"/>-->
                            <field name="invoice_date" string="Transaction Date" readonly="1"/>
                            <field name="amount_total" 
                                   string="Total Amount"
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" 
                                   readonly="1"/>
                            <field name="total_remaining_amount" 
                                   string="Remaining Amount"
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" 
                                   readonly="1"/>
                            <field name="due_amount" 
                                   string="Due Amount"
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" 
                                   readonly="1"/>
                            <field name="due_date" 
                                   string="Due Date" 
                                   options="{'datepicker': {'min_date': False}}"
                                   invisible="1"/>
                            <field name="to_pay" 
                                   string="To Pay"
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"/>
                        </list>
                    </field>
                    
                    <!-- Validation message -->
                    <group invisible="control_payment_remaining_amount == 0">
                        <div class="alert alert-warning" role="alert">
                            <strong>Warning:</strong> Total control to pay amount must equal the payment amount.
                            Current difference: <field name="control_payment_remaining_amount" 
                                                       string="Control Remaining Amount"
                                                       widget="monetary" 
                                                       options="{'currency_field': 'currency_id'}" 
                                                       readonly="1"
                                                       nolabel="1"/>
                        </div>
                    </group>
                    
                    <!-- Process payments button (hidden, called automatically on validate) -->
                    <group invisible="1">
                        <button name="action_process_control_payments" 
                                string="Process Control Payments" 
                                type="object" 
                                class="oe_highlight"
                                icon="fa-money" invisible="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>

