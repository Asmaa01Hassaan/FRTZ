<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Control Payment Tree View -->
    <record id="view_control_payment_tree" model="ir.ui.view">
        <field name="name">control.payment.tree</field>
        <field name="model">control.payment</field>
        <field name="arch" type="xml">
            <list string="Control Payments" editable="bottom">
                <field name="invoice_id" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                <field name="invoice_name" string="Transion" readonly="1"/>
                <field name="invoice_date" string="Transion Date" readonly="1"/>
                <field name="amount_total" 
                       widget="monetary" 
                       options="{'currency_field': 'currency_id'}" 
                       readonly="1"/>
                <field name="total_remaining_amount" 
                       widget="monetary" 
                       options="{'currency_field': 'currency_id'}" 
                       readonly="1"/>
                <field name="due_amount" 
                       widget="monetary" 
                       options="{'currency_field': 'currency_id'}" 
                       readonly="1"/>
                <field name="to_pay" 
                       widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
            </list>
        </field>
    </record>

    <!-- Control Payment Form View -->
    <record id="view_control_payment_form" model="ir.ui.view">
        <field name="name">control.payment.form</field>
        <field name="model">control.payment</field>
        <field name="arch" type="xml">
            <form string="Control Payment">
                <sheet>
                    <group>
                        <group>
                            <field name="payment_id" readonly="1"/>
                            <field name="invoice_id" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="invoice_name" string="Transion" readonly="1"/>
                            <field name="invoice_date" string="Transion Date" readonly="1"/>
                            <field name="amount_total" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" 
                                   readonly="1"/>
                            <field name="total_remaining_amount" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" 
                                   readonly="1"/>
                            <field name="due_amount" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}" 
                                   readonly="1"/>
                            <field name="to_pay" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Control Payment Action -->
    <record id="action_control_payment" model="ir.actions.act_window">
        <field name="name">Control Payments</field>
        <field name="res_model">control.payment</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_payment_id': active_id}</field>
    </record>
</odoo>

