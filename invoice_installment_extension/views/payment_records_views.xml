<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Records Tree View -->
    <record id="view_payment_records_tree" model="ir.ui.view">
        <field name="name">payment.records.tree</field>
        <field name="model">payment.records</field>
        <field name="arch" type="xml">
            <list string="Payment Records" default_order="payment_date desc, create_date desc">
                <field name="name" string="Reference"/>
                <field name="payment_name" string="Payment"/>
                <field name="payment_date" string="Payment Date"/>
                <field name="invoice_name" string="Invoice"/>
                <field name="installment_name" string="Installment"/>
                <field name="installment_due_date" string="Due Date"/>
                <field name="paid_amount" 
                       widget="monetary" 
                       options="{'currency_field': 'currency_id'}"/>
                <field name="previous_state" string="Previous State"/>
                <field name="new_state" string="New State"/>
                <field name="action_type" string="Action Type"/>
                <field name="create_date" string="Created On" readonly="1"/>
            </list>
        </field>
    </record>

    <!-- Payment Records Form View -->
    <record id="view_payment_records_form" model="ir.ui.view">
        <field name="name">payment.records.form</field>
        <field name="model">payment.records</field>
        <field name="arch" type="xml">
            <form string="Payment Record">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="payment_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="payment_name" readonly="1"/>
                            <field name="payment_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="invoice_id" readonly="1" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="invoice_name" readonly="1"/>
                            <field name="installment_id" readonly="1" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="installment_name" readonly="1"/>
                            <field name="installment_due_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="paid_amount" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"
                                   readonly="1"/>
                            <field name="previous_state" readonly="1"/>
                            <field name="new_state" readonly="1"/>
                            <field name="action_type" readonly="1"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="installment_amount" 
                                   widget="monetary" 
                                   options="{'currency_field': 'currency_id'}"
                                   readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="write_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes about this payment record..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Payment Records Action -->
    <record id="action_payment_records" model="ir.actions.act_window">
        <field name="name">Payment Records</field>
        <field name="res_model">payment.records</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No payment records found
            </p>
            <p>
                Payment records track all actions that change installment states and store payment information.
            </p>
        </field>
    </record>

    <!-- Payment Records Menu -->
    <menuitem id="menu_payment_records"
              name="Payment Records"
              parent="menu_installment_management"
              action="action_payment_records"
              sequence="20"/>
</odoo>

