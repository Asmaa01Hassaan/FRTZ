<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Account Move Line Form View - Add Installment Fields -->
    <record id="view_move_line_form_installment" model="ir.ui.view">
        <field name="name">account.move.line.form.installment</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <!-- Add installment fields to move line form -->
            <xpath expr="//field[@name='quantity']" position="after">
                <field name="installment_num" string="Installments"/>
                <field name="first_payment" string="First Payment"/>
            </xpath>
        </field>
    </record>

    <!-- Account Move Form View - Add Installment Fields to Invoice Header -->
    <record id="view_move_form_installment_header" model="ir.ui.view">
        <field name="name">account.move.form.installment.header</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add installment fields to invoice header -->
            <xpath expr="//field[@name='invoice_payment_term_id']" position="after">
                <field name="installment_num" string="Installments"/>
                <field name="first_payment" string="First Payment"/>
                <field name="view_generate" string="view generate" groups="base.group_allow_export,base.group_no_one"/>
                <button name="action_generate_payment_term" 
                        string="Generate Payment Term" 
                        type="object" 
                        class="btn-primary"
                        invisible="installment_num &lt;= 0 or not view_generate"/>
            </xpath>
        </field>
    </record>

    <!-- Account Move Form View - Add Installment Fields to Invoice Lines -->
    <record id="view_move_form_installment_lines" model="ir.ui.view">
        <field name="name">account.move.form.installment.lines</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add installment fields to invoice line form in invoice -->
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='quantity']" position="after">
                <field name="installment_num" string="Installments" optional="hide"/>
                <field name="first_payment" string="First Payment" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Account Move Form View - Add Installment List Section -->
    <record id="view_move_form_installment_list" model="ir.ui.view">
        <field name="name">account.move.form.installment.list</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add installment information page to invoice form -->
            <xpath expr="//notebook" position="inside">
                <page string="Installment Information" invisible="not has_installments">
                    <field name="has_installments" invisible="1"/>
                    
<!--                    <group>-->
<!--                        <group>-->
<!--                            <field name="installment_count"/>-->
<!--                            <field name="paid_installment_count"/>-->
<!--                            <field name="pending_installment_count"/>-->
<!--                            <field name="overdue_installment_count"/>-->
<!--                        </group>-->
<!--                        <group>-->
<!--                            <field name="total_paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>-->
<!--                            <field name="total_remaining_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>-->
<!--                        </group>-->
<!--                    </group>-->
                    
                    <group>
                        <button name="action_generate_installment_list" 
                                string="Generate Installment List" 
                                type="object" 
                                class="btn-primary"
                                invisible="has_installments"/>
                        <button name="action_view_installment_list" 
                                string="View Installment List" 
                                type="object" 
                                class="btn-secondary"
                                invisible="not has_installments"/>
                    </group>
                    
                    <group string="Installment Details">
                        <field name="installment_list_ids" nolabel="1" context="{'list_view_ref': 'invoice_installment_extension.view_installment_list_list'}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Account Move List View - Add Installment Info -->
    <record id="view_move_list_installment_info" model="ir.ui.view">
        <field name="name">account.move.list.installment.info</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="has_installments" widget="boolean_toggle"/>
                <field name="installment_count" optional="hide"/>
                <field name="paid_installment_count" optional="hide"/>
                <field name="pending_installment_count" optional="hide"/>
                <field name="overdue_installment_count" optional="hide"/>
                <field name="total_paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}" optional="hide"/>
                <field name="total_remaining_amount" widget="monetary" options="{'currency_field': 'currency_id'}" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
