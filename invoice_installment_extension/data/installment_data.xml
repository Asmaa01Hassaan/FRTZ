<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Installment List Sequence -->
    <record id="seq_installment_list" model="ir.sequence">
        <field name="name">Installment List</field>
        <field name="code">installment.list</field>
        <field name="prefix">INST</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <!-- Payment Records Sequence -->
    <record id="seq_payment_records" model="ir.sequence">
        <field name="name">Payment Records</field>
        <field name="code">payment.records</field>
        <field name="prefix">PAYREC</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <!-- Regular Installment Payment Term -->
    <!-- Payment due exactly at the end of next month from invoice date (100% of total amount) -->
    <record id="payment_term_regular_installment" model="account.payment.term">
        <field name="name">Regular Installment</field>
        <field name="note">Payment due at the end of next month from invoice date (100% of total amount)</field>
        <field name="line_ids" eval="[Command.clear(), Command.create({'value': 'percent', 'value_amount': 100.0, 'delay_type': 'days_after_end_of_next_month', 'nb_days': 0})]"/>
    </record>
</odoo>
